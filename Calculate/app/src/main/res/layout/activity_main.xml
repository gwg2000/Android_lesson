<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="6" >
    <TextView
        android:id="@+id/terminal"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:textSize="50dp"
        android:maxLines="2"
        android:background="#99FF99" />

    <Button
        android:id="@+id/return_zero"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:height="70dp"
        android:text="c" />

    <Button
        android:id="@+id/add"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="+" />

    <Button
        android:id="@+id/one"
        android:text="1"/>

    <Button
        android:id="@+id/two"
        android:text="2"/>

    <Button
        android:id="@+id/three"
        android:text="3"/>

    <Button
        android:id="@+id/subtract"

        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="-" />

    <Button
        android:id="@+id/four"
        android:text="4"/>

    <Button
        android:id="@+id/five"
        android:text="5"/>

    <Button
        android:id="@+id/six"
        android:text="6"/>

    <Button
        android:id="@+id/multiply"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="*" />

    <Button
        android:id="@+id/seven"
        android:text="7"/>

    <Button
        android:id="@+id/eigth"
        android:text="8"/>

    <Button
        android:id="@+id/nine"
        android:text="9"/>

    <Button
        android:id="@+id/equal"
        android:text="="
        android:layout_rowSpan="2"
        android:layout_gravity="fill" />

    <Button
        android:id="@+id/point"
        android:text="."/>

    <Button
        android:id="@+id/zero"
        android:text="0"/>

    <Button
        android:id="@+id/divide"
        android:text="/"/>

</GridLayout>