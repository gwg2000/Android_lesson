<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="6" >


    <TextView
        android:id="@+id/terminal"
        android:layout_height="257dp"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:background="#99FF99"
        android:maxLines="4"
        android:textSize="50dp" />

    <Button
        android:id="@+id/return_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="46dp"
        android:text="c" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:textSize="46dp"
        android:layout_gravity="fill"
        android:text="+" />

    <Button
        android:id="@+id/one"
        android:layout_gravity="fill"
        android:textSize="35dp"
        android:text="1"/>

    <Button
        android:layout_gravity="fill"
        android:id="@+id/two"
        android:textSize="35dp"
        android:text="2"/>

    <Button
        android:layout_gravity="fill"
        android:id="@+id/three"
        android:textSize="35dp"
        android:text="3"/>

    <Button
        android:id="@+id/subtract"
        android:layout_gravity="fill"
        android:text="-"
        android:textSize="35dp" />

    <Button
        android:layout_gravity="fill"
        android:id="@+id/four"
        android:textSize="35dp"
        android:text="4"/>

    <Button
        android:layout_gravity="fill"
        android:id="@+id/five"
        android:textSize="35dp"
        android:text="5"/>

    <Button
        android:layout_gravity="fill"
        android:id="@+id/six"
        android:textSize="35dp"
        android:text="6"/>

    <Button
        android:id="@+id/multiply"
        android:layout_gravity="fill"
        android:textSize="35dp"
        android:text="*" />

    <Button
        android:layout_gravity="fill"
        android:id="@+id/seven"
        android:textSize="35dp"
        android:text="7"/>

    <Button
        android:layout_gravity="fill"
        android:id="@+id/eigth"
        android:textSize="35dp"
        android:text="8"/>

    <Button
        android:layout_gravity="fill"
        android:id="@+id/nine"
        android:textSize="35dp"
        android:text="9"/>

    <Button
        android:id="@+id/equal"
        android:layout_gravity="fill"
        android:textSize="35dp"
        android:text="="
         />

    <Button
        android:layout_gravity="fill"
        android:id="@+id/point"
        android:textSize="35dp"
        android:text="."/>

    <Button
        android:layout_gravity="fill"
        android:id="@+id/zero"
        android:textSize="35dp"
        android:text="0"/>

    <Button
        android:layout_gravity="fill"
        android:id="@+id/divide"
        android:textSize="35dp"
        android:text="/"/>

    <Button
        android:id="@+id/change"
        android:layout_gravity="fill"
        android:text="进制转换"
        android:textSize="15dp" />

</GridLayout>